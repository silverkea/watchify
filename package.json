{
  "name": "watchify",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "clean": "rm -rf .next test-results playwright-report coverage",
    "test": "jest",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:performance": "playwright test tests/e2e/performance.spec.ts",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:e2e:mobile": "playwright test tests/e2e/mobile-responsive.spec.ts",
    "test:e2e:cross-browser": "playwright test tests/e2e/cross-browser.spec.ts",
    "test:e2e:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:cucumber": "cucumber-js",
    "test:cucumber:report": "cucumber-js --format html:reports/cucumber-report.html",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:visual:update": "playwright test tests/e2e/visual-regression.spec.ts --update-snapshots",
    "test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
    "test:performance": "playwright test tests/e2e/performance.spec.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "playwright:install": "npx playwright install",
    "playwright:codegen": "npx playwright codegen localhost:3000",
    "playwright:report": "npx playwright show-report",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "audit:lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "critters": "^0.0.23",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.300.0",
    "next": "^14.0.0",
    "next-themes": "^0.2.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@cucumber/cucumber": "^10.0.0",
    "@playwright/test": "^1.55.1",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-interactions": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/blocks": "^7.0.0",
    "@storybook/nextjs": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.55.1",
    "postcss": "^8.0.0",
    "storybook": "^7.0.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "whatwg-fetch": "^3.6.20"
  }
}
